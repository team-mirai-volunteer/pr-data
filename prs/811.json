      "blob_url": "https://github.com/team-mirai/policy/blob/1b6b158484849f2f2ffe73262320f07b684eab9b/02_%E6%94%BF%E7%AD%96%E3%82%A4%E3%83%B3%E3%83%87%E3%83%83%E3%82%AF%E3%82%B9.md",
      "raw_url": "https://github.com/team-mirai/policy/raw/1b6b158484849f2f2ffe73262320f07b684eab9b/02_%E6%94%BF%E7%AD%96%E3%82%A4%E3%83%B3%E3%83%87%E3%83%83%E3%82%AF%E3%82%B9.md",
