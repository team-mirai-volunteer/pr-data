      "blob_url": "https://github.com/team-mirai/policy/blob/431b4170e301ed0a49d205c12b687a38d96c4353/13_%E3%82%B9%E3%83%86%E3%83%83%E3%83%97%EF%BC%91%E8%A1%8C%E6%94%BF%E6%94%B9%E9%9D%A9.md",
      "raw_url": "https://github.com/team-mirai/policy/raw/431b4170e301ed0a49d205c12b687a38d96c4353/13_%E3%82%B9%E3%83%86%E3%83%83%E3%83%97%EF%BC%91%E8%A1%8C%E6%94%BF%E6%94%B9%E9%9D%A9.md",
