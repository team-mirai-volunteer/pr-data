      "changes": 51,
      "blob_url": "https://github.com/team-mirai/policy/blob/ad805a1201bd465f2b1bda5a22134ed2f7c4adc5/.github%2Fscripts%2Fpost_to_x.ts",
      "raw_url": "https://github.com/team-mirai/policy/raw/ad805a1201bd465f2b1bda5a22134ed2f7c4adc5/.github%2Fscripts%2Fpost_to_x.ts",
      "contents_url": "https://api.github.com/repos/team-mirai/policy/contents/.github%2Fscripts%2Fpost_to_x.ts?ref=ad805a1201bd465f2b1bda5a22134ed2f7c4adc5",
      "patch": "@@ -0,0 +1,51 @@\n+import { TwitterApi } from 'twitter-api-v2';\n+import * as fs from 'fs';\n+\n+interface GitHubUser {\n+  login: string;\n+}\n+\n+interface GitHubPullRequest {\n+  title?: string;\n+  html_url?: string;\n+  user?: GitHubUser;\n+}\n+\n+interface GitHubEvent {\n+  pull_request?: GitHubPullRequest;\n+}\n+\n+// PR情報をGitHub Actionsのイベントから取得\n+const eventPath = process.env.GITHUB_EVENT_PATH;\n+let pr: GitHubPullRequest = {};\n+if (eventPath && fs.existsSync(eventPath)) {\n+  const event: GitHubEvent = JSON.parse(fs.readFileSync(eventPath, 'utf8'));\n+  pr = event.pull_request || {};\n+}\n+\n+const prTitle = pr.title ?? 'PRタイトル';\n+const prUrl = pr.html_url ?? 'PRリンク';\n+const prUser = pr.user?.login ?? 'ユーザー名';\n+\n+const text = `提案したPRがマージされました！ありがとうございました！\\nタイトル: ${prTitle}\\nリンク: ${prUrl}\\n提案者: ${prUser}さん`;\n+\n+const client = new TwitterApi({\n+  appKey: process.env.TWITTER_API_KEY!,\n+  appSecret: process.env.TWITTER_API_SECRET!,\n+  accessToken: process.env.TWITTER_ACCESS_TOKEN!,\n+  accessSecret: process.env.TWITTER_ACCESS_TOKEN_SECRET!,\n+});\n+\n+(async () => {\n+  try {\n+    const tweet = await client.v2.tweet(text);\n+    console.log('Success:', tweet);\n+  } catch (e: unknown) {\n+    if (e instanceof Error) {\n+      console.error('Error:', e.message);\n+    } else {\n+      console.error('Unknown error:', e);\n+    }\n+    process.exit(1);\n+  }\n+})(); "
    },
    {
      "sha": "41a2a29d4ac03d4d0b7287a40e4b3824f669cf74",
      "filename": ".github/workflows/post-to-x.yml",
      "status": "added",
      "additions": 33,
      "deletions": 0,
      "changes": 33,
      "blob_url": "https://github.com/team-mirai/policy/blob/ad805a1201bd465f2b1bda5a22134ed2f7c4adc5/.github%2Fworkflows%2Fpost-to-x.yml",
      "raw_url": "https://github.com/team-mirai/policy/raw/ad805a1201bd465f2b1bda5a22134ed2f7c4adc5/.github%2Fworkflows%2Fpost-to-x.yml",
      "contents_url": "https://api.github.com/repos/team-mirai/policy/contents/.github%2Fworkflows%2Fpost-to-x.yml?ref=ad805a1201bd465f2b1bda5a22134ed2f7c4adc5",
      "patch": "@@ -0,0 +1,33 @@\n+name: Post PR Info to X\n+\n+on:\n+  pull_request:\n+    types: [closed]\n+    branches:\n+      - main\n+\n+jobs:\n+  post-to-x:\n+    runs-on: ubuntu-latest\n+    steps:\n+      - name: Checkout\n+        uses: actions/checkout@v4\n+\n+      - name: Set up Node.js\n+        uses: actions/setup-node@v4\n+        with:\n+          node-version: '20'\n+\n+      - name: Run post script\n+        if: github.event.pull_request.merged == true\n+        env:\n+          TWITTER_API_KEY: ${{ secrets.TWITTER_API_KEY }}\n+          TWITTER_API_SECRET: ${{ secrets.TWITTER_API_SECRET }}\n+          TWITTER_ACCESS_TOKEN: ${{ secrets.TWITTER_ACCESS_TOKEN }}\n+          TWITTER_ACCESS_TOKEN_SECRET: ${{ secrets.TWITTER_ACCESS_TOKEN_SECRET }}\n+        run: |\n+          cd .github/scripts\n+          npm init -y\n+          npm install twitter-api-v2 typescript @types/node\n+          npx tsc post_to_x.ts --target ES2020 --module commonjs\n+          node post_to_x.js"
    }
  ],
